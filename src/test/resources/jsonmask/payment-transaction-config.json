{
  "rules": [
    {
      "match": {
        "type": "regex",
        "value": ".*(card.*number|account.*number|routing.*number|iban).*"
      },
      "strategy": {
        "type": "middle",
        "keepLeft": 4,
        "keepRight": 4,
        "maskChar": "*"
      }
    },
    {
      "match": {
        "type": "regex",
        "value": ".*(cvc|cvv).*"
      },
      "strategy": {
        "type": "full",
        "maskChar": "*"
      }
    },
    {
      "match": {
        "type": "regex",
        "value": ".*(ssn|social.*security).*"
      },
      "strategy": {
        "type": "full",
        "maskChar": "*"
      }
    },
    {
      "match": {
        "type": "contains",
        "value": "email"
      },
      "strategy": {
        "type": "middle",
        "keepLeft": 2,
        "keepRight": 2,
        "maskChar": "*"
      }
    },
    {
      "match": {
        "type": "regex",
        "value": ".*(phone|telephone).*"
      },
      "strategy": {
        "type": "middle",
        "keepLeft": 3,
        "keepRight": 4,
        "maskChar": "*"
      }
    },
    {
      "match": {
        "type": "regex",
        "value": ".*(api.*key|api.*secret|password|secret|hmac.*key|webhook.*password).*"
      },
      "strategy": {
        "type": "full",
        "maskChar": "*"
      }
    },
    {
      "match": {
        "type": "regex",
        "value": ".*(birth|dob).*"
      },
      "strategy": {
        "type": "full",
        "maskChar": "*"
      }
    }
  ]
}
