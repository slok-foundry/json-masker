{
  "rules": [
    {
      "match": {
        "type": "regex",
        "value": ".*(ssn|social.*security|tax.*id|national.*id|passport).*"
      },
      "strategy": {
        "type": "full",
        "maskChar": "*"
      }
    },
    {
      "match": {
        "type": "regex",
        "value": ".*(card.*number|account.*number|routing.*number|iban).*"
      },
      "strategy": {
        "type": "middle",
        "keepLeft": 4,
        "keepRight": 4,
        "maskChar": "*"
      }
    },
    {
      "match": {
        "type": "regex",
        "value": ".*(cvv|password|api.*key|api.*secret|answer).*"
      },
      "strategy": {
        "type": "full",
        "maskChar": "*"
      }
    },
    {
      "match": {
        "type": "contains",
        "value": "email"
      },
      "strategy": {
        "type": "middle",
        "keepLeft": 2,
        "keepRight": 2,
        "maskChar": "*"
      }
    },
    {
      "match": {
        "type": "regex",
        "value": ".*(phone|mobile).*"
      },
      "strategy": {
        "type": "middle",
        "keepLeft": 3,
        "keepRight": 4,
        "maskChar": "*"
      }
    },
    {
      "match": {
        "type": "regex",
        "value": ".*(first.*name|last.*name|cardholder.*name).*"
      },
      "strategy": {
        "type": "middle",
        "keepLeft": 1,
        "keepRight": 1,
        "maskChar": "*"
      }
    },
    {
      "match": {
        "type": "regex",
        "value": ".*(birth|dob).*"
      },
      "strategy": {
        "type": "full",
        "maskChar": "*"
      }
    },
    {
      "match": {
        "type": "regex",
        "value": ".*(insurance.*number|blood.*type).*"
      },
      "strategy": {
        "type": "full",
        "maskChar": "*"
      }
    },
    {
      "match": {
        "type": "regex",
        "value": ".*(street|address).*"
      },
      "strategy": {
        "type": "length",
        "maskChar": "X"
      }
    },
    {
      "match": {
        "type": "regex",
        "value": ".*(ip.*address).*"
      },
      "strategy": {
        "type": "middle",
        "keepLeft": 3,
        "keepRight": 0,
        "maskChar": "*"
      }
    }
  ]
}
