{
  "rules": [
    {
      "match": {
        "type": "regex",
        "value": ".*(ssn|social.*security|tax.*id).*"
      },
      "strategy": {
        "type": "full",
        "maskChar": "*"
      }
    },
    {
      "match": {
        "type": "regex",
        "value": ".*(card.*number|account.*number|routing.*number|iban|cvv|cvc).*"
      },
      "strategy": {
        "type": "middle",
        "keepLeft": 4,
        "keepRight": 4,
        "maskChar": "*"
      }
    },
    {
      "match": {
        "type": "regex",
        "value": ".*(password|secret|api.*key|api.*secret|token|hmac).*"
      },
      "strategy": {
        "type": "full",
        "maskChar": "*"
      }
    },
    {
      "match": {
        "type": "contains",
        "value": "email"
      },
      "strategy": {
        "type": "middle",
        "keepLeft": 2,
        "keepRight": 2,
        "maskChar": "*"
      }
    },
    {
      "match": {
        "type": "regex",
        "value": ".*(phone|mobile|telephone).*"
      },
      "strategy": {
        "type": "middle",
        "keepLeft": 3,
        "keepRight": 4,
        "maskChar": "*"
      }
    },
    {
      "match": {
        "type": "regex",
        "value": ".*(first.*name|last.*name|holder.*name|cardholder.*name).*"
      },
      "strategy": {
        "type": "middle",
        "keepLeft": 1,
        "keepRight": 1,
        "maskChar": "*"
      }
    },
    {
      "match": {
        "type": "regex",
        "value": ".*(address|street|passport|license|insurance.*number).*"
      },
      "strategy": {
        "type": "length",
        "maskChar": "X"
      }
    },
    {
      "match": {
        "type": "regex",
        "value": ".*(birth|dob).*"
      },
      "strategy": {
        "type": "full",
        "maskChar": "*"
      }
    }
  ]
}
